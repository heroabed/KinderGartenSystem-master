<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.citytech.kindergartensystem.Teachers.TeacherAdd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp">

        <ImageView
            android:id="@+id/empImg"
            android:layout_width="220dp"
            android:layout_height="160dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            app:srcCompat="@color/colorPrimaryDark"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:hint="الإسم رباعيا"
            android:id="@+id/empName"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/empDateLayout"
            android:layout_marginTop="4dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/empBDday"
                android:hint="DD"
                android:inputType="number"
                android:layout_weight="1.5"

                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/empBDmonth"
                android:hint="MM"
                android:layout_weight="1.5"
                android:inputType="number"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/empBDyear"
                android:hint="YYYY"
                android:layout_weight="3"
                android:inputType="number"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="تاريخ الميلاد : "
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_weight="3"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            >
            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/empState"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_gravity="center"
                android:entries="@array/state"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="عدد الأطفال"
                android:inputType="text"
                android:layout_marginStart="4dp"
                android:id="@+id/empChildNo"
                android:visibility="gone"
                android:layout_weight="1"/>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="رقم الهوية"
            android:id="@+id/empId"
            android:inputType="number"
            android:textColor="@color/black"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="عنوان السكن الدائم"
            android:id="@+id/empAddress"
            android:textColor="@color/black"
            android:inputType="text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/empEmail"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:hint="البريد الالكتروني"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            >
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="رقم الجوال"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:id="@+id/empPhone"
                android:inputType="number"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="هاتف المنزل"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:id="@+id/empHomePhone"
                android:inputType="number"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Spinner
                android:id="@+id/empDeg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/status"
                android:padding="4dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/empUniSpec"
                android:layout_weight="1"
                android:hint="التخصص"
                android:inputType="text"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/empGraYear"
                android:hint="سنة التخرج"
                android:inputType="number"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="الجامعة"
                android:layout_marginEnd="4dp"
                android:id="@+id/empUniversity"
                android:inputType="text"
                android:layout_weight="1"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="المعدل"
                android:layout_marginStart="4dp"
                android:id="@+id/empRank"
                android:inputType="numberDecimal"/>

        </LinearLayout>




        
    </LinearLayout>

</ScrollView>
